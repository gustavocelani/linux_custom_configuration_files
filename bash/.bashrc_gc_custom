#------------------------------------------------------------------------------
# Terminal settings.
#------------------------------------------------------------------------------
if ! [ $TERM ];
then
    eval `tset -s -Q`
    case $TERM in
        con*|vt100|linux|xterm)
            tset -Q -e ^?
        ;;
    esac
fi


